@model RealEstate.ViewModels.WebMVC.RegisterViewModel

@{
    ViewBag.Title = "Регистрация на агент";
}

@section css{
    <style>
        .receive-offers, .terms {
            margin-bottom: 5px;
            font-weight: bold;
        }
    </style>
}

<div role="main" class="main pgl-bg-grey">
    <!-- Begin page top -->
    <section class="page-top">
        <div class="container">
            <div class="page-top-in">
                <h2><span>Регистрация на Агент</span></h2>
            </div>
        </div>
    </section>
    <section class="registerOwner">
        <div class="container">
            <div class="col-md-6 col-lg-offset-3">
                <!-- End page top -->
                @using (Html.BeginForm("RegisterAgent", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-6">
                    <label>Име</label>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    <label>Фамилия</label>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <label>Потребителско име</label>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.Label("Е-мейл", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group col-md-12" style="margin:auto;">
                @Html.Label("Парола", new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div class="form-group col-md-12" style="margin:auto;">
                @Html.Label("Потвърди Парола", new { @class = "control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            <div class="form-group col-md-12" style="margin:auto; padding-top:20px; padding-bottom:20px;">
                <button type="submit" class="btn btn-block btn-primary">Регистрирай</button>
            </div>
                }
            </div>
            </div>
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
