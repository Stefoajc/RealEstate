@model RealEstate.ViewModels.WebMVC.RegisterAgent

@{
    ViewBag.Title = "Регистрация на Брокер - Имоти СПРОПЪРТИС";
}

@section css{
    <style>
        .receive-offers, .terms {
            margin-bottom: 5px;
            font-weight: bold;
        }
    </style>
}

<div role="main" class="main pgl-bg-grey">
    <!-- Begin page top -->
    <section class="page-top">
        <div class="container">
            <div class="page-top-in">
                <h2><span>Регистрация на Брокер</span></h2>
            </div>
        </div>
    </section>
    <section class="registerOwner">
        <div class="container">
            <div class="col-md-6 col-lg-offset-3">
                <!-- End page top -->
                @using (Html.BeginForm("RegisterAgent", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        <div class="col-md-6">
                            <label>Име</label>
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            <label>Фамилия</label>
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label>Потребителско име</label>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @Html.Label("Е-мейл", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.Label("Парола", new { @class = "control-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        <div class="col-md-12">
                            @Html.Label("Потвърди Парола", new { @class = "control-label" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>

                        <div class="col-md-12" style="padding-top:20px; padding-bottom:20px;">
                            <button type="submit" class="btn btn-block btn-primary">Регистрирай Агент</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}