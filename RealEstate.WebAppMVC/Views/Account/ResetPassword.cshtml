@model RealEstate.ViewModels.WebMVC.ResetPasswordViewModel
@{
    ViewBag.Title = "Забравена парола - Имоти СПРОПЪРТИС";
}

<div class="container-fluid">
    <div class="col-md-offset-4 col-xs-offset-0 top-bottom-marginated">

        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal col-md-6 col-xs-12", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h2 align="center">Променете паролата си.</h2>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            <div class="form-group">
                @Html.Label("Емейл", new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Нова парола", new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Повтори паролата", new { @class = "control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-block " value="Потвърди" />
            </div>
        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
