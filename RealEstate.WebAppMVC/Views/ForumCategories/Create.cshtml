@model RealEstate.ViewModels.WebMVC.Forum.ForumCategoryCreateViewModel
@{
    ViewBag.Title = "Създай категория - Имоти СПРОПЪРТИС";
}

@section css{
    <style>
        body {
            text-align: center;
        }
        input { 
            text-align: center; 
        }
    </style>
}

@using (Html.BeginForm("Create", "ForumCategories", FormMethod.Post, new { @class = "container" }))
{

    <div class="col-xs-12" style="margin: 30px 0 30px 0;">
        <h1 align="center">Създаване на категория</h1>
        <div class="form-group col-md-6 col-md-offset-3  col-xs-12">
            <label class="required">Изберете категория</label>
            <select name="CategoryId" id="CategoryId" class="chosen-select">
                <option value="">Изберете категория в която да създадете категория</option>
                @foreach (var category in ViewBag.ParentCategory)
                {
                    <option value="@category.ForumCategoryId">@category.Name</option>
                }
            </select>
            @Html.ValidationMessageFor(model => model.ForumCategoryParentId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6 col-md-offset-3 col-xs-12">
            <label class="required">Име на категорията</label>
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6 col-md-offset-3 col-xs-12">
            <label>Описание на категорията</label>
            @Html.EditorFor(m => m.Info, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Info, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6 col-md-offset-3 col-xs-12">
            <label>Отворена за теми?</label>
            @Html.CheckBoxFor(m => m.IsOpenForThemes, new { @checked="checked"  })
            @Html.ValidationMessageFor(model => model.IsOpenForThemes, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6 col-md-offset-3 col-xs-12">
            <input class="btn btn-primary pull-right" type="submit" value="Създай" />
        </div>
    </div>


}