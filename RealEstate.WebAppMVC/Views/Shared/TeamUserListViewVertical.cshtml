@using RealEstate.Services.Helpers
@model RealEstate.ViewModels.WebMVC.TeamUserListViewModel



<div class="pgl-agent-item pgl-bg-light" style="max-height: 422.5px">
    <div class="img-thumbnail-medium">
        <a href="@Url.Action("Details", "Agents", new {agentId = Model.AgentId})">
            <picture>
                <source srcset="@(FileHelpers.ChangeFileExtension(Model.ImagePath.Replace(" ", "%20"), ".webp"))" type="image/webp">
                <source srcset="@Model.ImagePath.Replace(" ", "%20")" type="@MimeMapping.GetMimeMapping(Model.ImagePath.Replace(" ", "%20"))">
                <img alt="Снимка"  class="img-responsive" style="width: 100%; height: 220.5px;" src="@Model.ImagePath.Replace(" ", "%20")">
            </picture>
        </a>
        @*<ul class="social-links">
                @foreach (var socialAccount in Model.SocialMediaAccounts)
                {
                    <li><a href="@socialAccount.SocialMediaAccount"><i class="fa fa-@socialAccount.SocialMedia.ToLower()"></i></a></li>
                }
            </ul>*@
    </div>
    <div class="pgl-agent-info">
        <h4><a href="@Url.Action("Details", "Agents", new {agentId = Model.AgentId})">@Model.FullName</a></h4>
        <address>
            <span class="contact-field" title="@Model.OfficePhone"><i class="fa fa-map-marker"></i> Офис : @Model.OfficePhone<br> </span>
            <span class="contact-field" title="@Model.PhoneNumber"><i class="fa fa-phone"></i> Мобилен : @Model.PhoneNumber<br> </span>
            @*<span class="contact-field" title="@Model.PhoneNumber"><i class="fa fa-fax"></i> Fax : @Model.PhoneNumber<br> </span>*@
            <span class="contact-field" title="@Model.Email"><i class="fa fa-envelope-o"></i> Емейл: <a href="mailto:@(Model.Email)">@(Model.Email)</a> </span>
        </address>
    </div>
</div>