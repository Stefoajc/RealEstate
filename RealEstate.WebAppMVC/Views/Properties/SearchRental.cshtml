@model RealEstate.ViewModels.WebMVC.SearchRentalViewModel

<section class="pgl-advanced-search pgl-bg-light">
    <div class="container">
        @using (Html.BeginForm("SearchRental", "Properties" , FormMethod.Get))
        {
            <div class="row">
                <div class="col-xs-6 col-sm-3">
                    <div class="form-group">
                        <input readonly="readonly" value="Под наем" class="form-control" />
                    </div>
                </div>
                <div class="col-xs-6 col-sm-3">
                    <div class="form-group">
                        <label class="sr-only" for="location">Град</label>
                        <select id="cityId" name="rentCityId" data-placeholder="Location" class="chosen-select" style="display: none;">
                            <option selected="selected" value="">Град</option>
                            @foreach (var city in ViewBag.Cities)
                            {
                                <option value="@city.CityId">@city.CityName</option>
                            }
                        </select>
                        @Html.ValidationMessage("rentCityId", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-xs-6 col-sm-3">
                    <div class="form-group">
                        <div class="input-group date" id="event-start">
                            <input class="form-control" name="from" placeholder="От" type="text">
                            <span class="input-group-addon" style="">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                        @Html.ValidationMessage("from", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-xs-6 col-sm-3">
                    <div class="form-group">
                        <div class="input-group date" id="event-start">
                            <input class="form-control" name="to" placeholder="До" type="text">
                            <span class="input-group-addon" style="">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                        @Html.ValidationMessage("to", new { @class = "text-danger" })
                    </div>

                </div>

            </div>

            <div class="row">
                <div class="col-xs-6 col-sm-3">
                    <div class="form-group">
                        <label class="sr-only" for="property-types">Типове имоти</label>
                        <select id="property-types" name="rentPropertyType" data-placeholder="Property Types" class="chosen-select" style="display: none;">
                            <option selected="selected" value="">Типове имоти</option>
                            @foreach (var propertyType in ViewBag.PropertyTypes)
                            {
                                <option value="@propertyType.PropertyTypeId">@propertyType.PropertyTypeName</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="col-xs-6 col-sm-3">
                    <div class="form-group">
                        <label class="sr-only" for="search-distancefromcity">Разстояние от града</label>
                        <select id="distanceFromCity" name="rentDistanceFromCity" data-placeholder="Разстояние от града" class="chosen-select" style="display: none;">
                            <option selected="selected" value="">Разстояние от града</option>
                            <option value="0">0км</option>
                            <option value="5">5км</option>
                            <option value="10">10км</option>
                            <option value="20">20км</option>
                            <option value="30">30км</option>
                            <option value="50">50км</option>
                        </select>
                        @Html.ValidationMessage("rentDistanceFromCity", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-xs-6 col-sm-3">
                    <div class="form-group">
                        <div class="row pgl-narrow-row">
                            <div class="col-xs-6">
                                <label class="sr-only" for="search-minprice">Цена от</label>
                                <select id="priceFrom" name="rentPriceFrom" data-placeholder="Price From" class="chosen-select" style="display: none;">
                                    <option selected="selected" value="">Цена от</option>
                                    @for (int i = 0; i <= 1000; i += 100)
                                    {
                                        <option value="@i">@(i)лв.</option>
                                    }
                                </select>
                            </div>
                            <div class="col-xs-6">
                                <label class="sr-only" for="search-maxprice">Цена до</label>
                                <select id="priceTo" name="rentPriceTo" data-placeholder="Price To" class="chosen-select" style="display: none;">
                                    <option selected="selected" value="">Цена до</option>
                                    @for (int i = 100; i <= 1000; i += 100)
                                    {
                                        <option value="@i">@(i)лв.</option>
                                    }
                                    <option value="1000plus">&gt;1000лв.</option>
                                </select>
                            </div>
                            @Html.ValidationMessage("rentPriceTo", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-3">
                    <div class="form-group">
                        <button type="submit" class="btn btn-block btn-primary">Намери своя дом</button>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
